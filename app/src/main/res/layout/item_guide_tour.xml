<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_guide_tour_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/image_1"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/item_guide_tour_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="34dp"
        android:text="Your guide message"
        android:layout_below="@id/item_guide_tour_image"/>

    <TextView
        android:id="@+id/item_guide_tour_descripion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:text="Your guide message"
        android:layout_below="@id/item_guide_tour_title"/>

</RelativeLayout>
