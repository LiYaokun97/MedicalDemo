<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:background="@drawable/recycler_view_item_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/indicator_name_view"
        android:layout_marginLeft="10dp"
        android:text="Heart Rate"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/indicator_value_view"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:text="89"
        android:textSize="36dp"
        android:layout_below="@id/indicator_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/indicator_change_view"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="+14%"
        android:textSize="13dp"
        android:layout_below="@id/indicator_value_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.material.components.mine.CustomBarChartView
        android:layout_below="@+id/indicator_change_view"
        android:visibility="gone"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/bar_chart_view"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="16dp"
        />

</RelativeLayout>