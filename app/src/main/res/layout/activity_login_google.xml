<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-20dp"
        android:layout_gravity="right"
        android:text="skip" />

    <ImageView
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/mental_health"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/title_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="You're not alone."
        android:textSize="18dp" />


    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/title_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Together for brighter days."
        android:textColor="#000000"
        android:fontFamily="@font/cascadia_code_regular"
        android:textSize="40dp" />


    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#726d6c"
        android:text="Log in to personalize your experience and track your progress"
        android:textSize="18dp" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/google_login_btn_layout"
        android:layout_marginTop="120dp"
        android:background="@drawable/login_page_google_button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:src="@drawable/google"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/google_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Sign in with Google"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/privacy_policy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#9b9796"
        android:text="@string/login_privacy_policy"
        android:textSize="14dp" />

</LinearLayout>