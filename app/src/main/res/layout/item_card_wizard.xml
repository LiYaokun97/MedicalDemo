<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="On a scale of 1-5, with 5 being strongly agree and 1 being strongly disagree:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/grey_40"
            android:textColorHint="#656566"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/spacing_xlarge"
            android:text="I feel that when I think or do things, I'm slower than usual."
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/question_color"
            android:textSize="18dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/choices_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_choice1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/option_button_bg"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="1 - strongly disagree"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:stateListAnimator="@null"/>

            <Button
                android:id="@+id/btn_choice2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/option_button_bg"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="2"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:stateListAnimator="@null"/>


            <Button
                android:id="@+id/btn_choice3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/option_button_bg"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="3"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:stateListAnimator="@null"/>


            <Button
                android:id="@+id/btn_choice4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/option_button_bg"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="4"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:stateListAnimator="@null"/>


            <Button
                android:id="@+id/btn_choice5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/option_button_bg"
                android:gravity="center"
                android:text="5 - strongly agree"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:stateListAnimator="@null"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</RelativeLayout>

